@model HandleErrorInfo
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
    </hgroup>
    <div>
        @String.Format(
            "Controller = {0}. Action = {1}. Error = {2}.",
            Model.ControllerName,
            Model.ActionName,
            Model.Exception.ToString())
    </div>
</body>
</html>
